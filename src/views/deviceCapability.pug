extends layout

block scripts
  script(src="/public/index.js")
  script(src="//mozilla.github.io/pdf.js/build/pdf.js")
  script(src="https://teams.microsoft.com/share/launcher.js")

block content
  div(style='text-align:center')
    h1 Platform Extensibility App
    p Welcome to #{title}
    div.teams-share-button(data-icon-px-size='78' data-href='https://www.youtube.com/watch?v=971YIvosuUk&t=7s' data-msg-text='Test STT message')
    div
      button#share Share  
    p        
    div
      table
        tbody
          tr
            td
              | API Type &nbsp;
              select#apiType
                option(value='getMedia')  Get Media
                |
                option(value='selectMedia') Select Media
                |
                option(value='viewImages') View Images
              |
              br
              |
              b
              | Media Type &nbsp;
              select#mediaType
                option(value='nativeVideo') Native Video
                |
                option(value='lensVideo') Lens Video
                |
                option(value='image')  Image
                |
                option(value='videoAndImage') Video & Image
                |
                option(value='audio') Audio
                |
                option(value='imageOutputFormats') Image Output Formats
              |
              br
              |
              br
              button#start Call API
            td
              textarea#inputTextArea
      table
        tbody
          tr
            div#blobs
          tr
            button#stopMedia Stop Media
            |
            br
            br
            |
            button#clearLogs Clear Logs
            |
            div#logs
    div(hidden='true')#pdfViewer
      canvas#the-canvas
      p#page_num
      button#prev Previous        
      button#next Next  
      